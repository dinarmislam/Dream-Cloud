<p id="notice"><%= notice %></p>

<h1>Listing Share Dreams</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @share_dreams.each do |share_dream| %>
      <tr>
        <td><%= share_dream.tittle %></td>
        <td><%= share_dream.description %></td>
        <td><%= link_to 'Show', share_dream %></td>
        <td><%= link_to 'Edit', edit_share_dream_path(share_dream) %></td>
        <td><%= link_to 'Destroy', share_dream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

