<%= simple_form_for(@blog) do |f| %>


<div class="form-group">
	<%= f.input :title, input_html:{class:'form-control'} %>
</div>
<div class="form-group">
    <%= f.input :body, as: :summernote, input_html: { id: 'body' } %>
  </div>

  <div class="form-group">
    <%= f.button :submit, class:'btn btn-default' %>
  </div>
<% end %>
